<Window x:Class="CoinMarketCapWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoinMarketCapWPF"
        mc:Ignorable="d"
        Title="Crypto Checker" Height="550" Width="550">
    <Grid>
        <TextBox x:Name="cryptoName" HorizontalAlignment="Left" Margin="16,131,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101" Height="18"/>
        <TextBlock x:Name="cryptoOutput" HorizontalAlignment="Left" Margin="280,43,0,0" TextWrapping="Wrap" Text="Your crypto price will be here if valid." VerticalAlignment="Top" Width="246" Height="466" Background="Black" Foreground="White"/>
        <Button x:Name="getPrice" Content="Check Price" HorizontalAlignment="Left" Margin="16,489,0,0" VerticalAlignment="Top" Width="75" Click="getPrice_Click" Height="20"/>
        <TextBlock x:Name="enterTag" HorizontalAlignment="Left" Margin="16,98,0,0" TextWrapping="Wrap" Text="Enter your CryptoCurrency below. e.g. Bitcoin" VerticalAlignment="Top" Height="41" Width="141"/>

    </Grid>
</Window>
